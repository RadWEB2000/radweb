{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/buttons/*": [
        "./src/components/utils/buttons/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/hooks/*": [
        "./src/lib/hooks/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/css/*": [
        "./src/styles/*"
      ],
      "@/ts/*": [
        "./src/types/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/ico/*": [
        "./src/assets/icons/*"
      ],
      "@/img/*": [
        "./src/assets/images/*"
      ],
      "@/vids/*": [
        "./src/assets/videos/*"
      ],
      "@/nav/*": [
        "./src/components/layout/navigation/*"
      ],
      "@/views/*": [
        "./src/components/views/*"
      ],
      "@/utils/*": [
        "./src/components/utils/*"
      ],
      "@/layout/*": [
        "./src/components/layout/*"
      ],
      "@/configs/*": [
        "./src/lib/configs/*"
      ],
      "@/funcs/*": [
        "./src/lib/functions/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}